{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Expand",
  "type": "object",
  "properties": {
    "suspects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "motive": { "type": "string" },
          "alibi": { "type": "string" },
          "background": { "type": "string" }
        }
      }
    },
    "evidences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "description": { "type": "string" },
          "location": { "type": "string" },
          "collectedAt": { "type": "string" }
        }
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": { "type": "string" },
          "event": { "type": "string" },
          "relatedPersons": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "witnesses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "testimony": { "type": "string" },
          "reliability": { "type": "string" }
        }
      }
    }
  }
}