{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Expand",
  "type": "object",
  "properties": {
    "suspects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "Suspect's name" },
          "role": { "type": "string", "description": "Suspect's role or relationship to the case" },
          "motive": { "type": "string", "description": "Potential motive for the crime" },
          "alibi": { "type": "string", "description": "Suspect's alibi" },
          "background": { "type": "string", "description": "Relevant background information" }
        }
      }
    },
    "evidences": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "description": "Type of evidence" },
          "description": { "type": "string", "description": "Detailed description of the evidence" },
          "location": { "type": "string", "description": "Where the evidence was found" },
          "collectedAt": { "type": "string", "description": "When the evidence was collected" }
        }
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "time": { "type": "string", "description": "Time of the event" },
          "event": { "type": "string", "description": "Description of what happened" },
          "relatedPersons": {
            "type": "array",
            "items": { "type": "string" },
            "description": "People involved in this event"
          }
        }
      }
    },
    "witnesses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "Witness's name" },
          "role": { "type": "string", "description": "Witness's role or relationship to the case" },
          "testimony": { "type": "string", "description": "Witness testimony" },
          "reliability": { "type": "string", "description": "Assessment of witness reliability" }
        }
      }
    }
  }
}